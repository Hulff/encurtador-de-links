{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../src/infra",
  "testEnvironment": "node",
  "testRegex": ".e2e.spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^test/(.*)$": "<rootDir>/../../test/$1",
    "^src/(.*)$": "<rootDir>/../../src/$1"
  }
}
