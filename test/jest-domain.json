{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "../src/domain",
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "testPathIgnorePatterns": [
    "\\.e2e.spec\\.ts$"
  ],
  "transformIgnorePatterns": [
    "/node_modules/(?!nanoid/).+\\.js$"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^test/(.*)$": "<rootDir>/../../test/$1",
    "^src/(.*)$": "<rootDir>/../../src/$1"
  }
}